<form action="/add_news" method="post">
    <input  class="title" type="text" name="news_title" placeholder="Enter News Title" required><br>
            <fieldset>
                <legend>Event</legend>
                <label>Select an old event</label>
                <select name="event_name1">
                {{!select_events}}
                <select>
                <br class="line">
                <label>Or enter a new Event</label>
                <label>Event:</label>
                <input type="text" name="event_name" placeholder="Enter Event Name">
                <br>
                <label>Select a sport:</label>
                <select name="event_sport">
                {{!select_sports}}
                </select>
                <br>
                <label>Select a vanue:</label>
                <select name="event_vanue">
                {{!select_vanues}}
                </select>
                <br>
                <span>Start Time</span>
                
                <div class="form_date">
                    <label>Month</label>
                    <select name="event_month">
                        <option value="" selected="selected"></option>
                        % for j in range(1,13):
                        <option value="{{!j}}">{{!j}}</option>
                        % end
                    </select>
                    <label>Day</label>
                    <select name="event_day">
                        <option value="" selected="selected"></option>
                        % for j in range(1,32):
                        <option value="{{!j}}">{{!j}}</option>
                        % end
                    </select>
                    <br>
                    <label>Hour</label>
                    <select name="event_h">
                        <option value="" selected="selected"></option>
                        % for j in range(1,25):
                        <option value="{{!j}}">{{!j}}</option>
                        % end
                    </select>
                    <label>Minuts</label>
                    <select name="event_min">
                        <option value="" selected="selected"></option>
                        % for j in range(1,61):
                        <option value="{{!j}}">{{!j}}</option>
                        % end
                    </select>
                </div>
                
                
            </fieldset>
            
            <fieldset>
                <legend>Athelets</legend>
                % for i in range(numberofathelets):
                <div class="inputtable">
                    <div class="athelet_number">{{!i+1}}</div>
                    <label>Select Country</label>
                    <select name="athelet_{{!i}}_country" required>
                        {{!select_countries}}
                    </select>
                    <label>Firstname:</label>
                    <input name="athelet_{{!i}}_firstname" type="text" required>
                    <label>Lastname:</label>
                    <input name="athelet_{{!i}}_lastname" type="text" required>
                    <label>Result</label>
                    <input name="athelet_{{!i}}_result" type="text" required>
                    <label>Rank</label>
                    <input name="athelet_{{!i}}_rank" type="number" required>
                        <label>Gender</label>
                        <select name="athelet_{{!i}}_gender" required="">
                        <option value="m">Male</option>
                        <option value="f">Female</option>
                    </select>
                    <span>Birthday</span>
                    
                   
                   <div class="form_date">
                    <label>Year</label>
                    <select name="athelet_{{!i}}_year">
                        <option value="" selected="selected"></option>
                        % for j in range(1950,2014):
                        <option value="{{!j}}">{{!j}}</option>
                        % end
                    </select>
                    <label>Month</label>
                    <select name="athelet_{{!i}}_month">
                        <option value="" selected="selected"></option>
                        % for j in range(1,13):
                        <option value="{{!j}}">{{!j}}</option>
                        % end
                    </select>
                    <label>Day</label>
                    <select name="athelet_{{!i}}_day">
                        <option value="" selected="selected"></option>
                        % for j in range(1,32):
                        <option value="{{!j}}">{{!j}}</option>
                        % end
                    </select>
                </div>
                
                </div>
                % end
            </fieldset>
            
            <fieldset>
                <legend>News Content</legend>
                <textarea name="news_content" placeholder="Enter News here!"></textarea>
            </fieldset>
            % if defined('user'):
            <input type="text" name="user" value="{{!user}}" hidden>
            % end
            <input type="submit">
        </form>
